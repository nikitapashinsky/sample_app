<% provide(:title, "Edit account") %>


<div class="max-w-sm mx-auto flex flex-col items-center">
    <h1 class="mb-8 text-5xl font-bold tracking-tight leading-tight text-coolgray-900 dark:text-white">Update profile</h1>

    <div class="mb-6 flex items-center space-x-3">
      <%= gravatar_for(@user, { size: 200, class: "w-24 rounded-full" }) %>
      <a href="https://gravatar.com/emails" target="_blank" rel="noopener" class="py-2 px-3 text-sm font-semibold rounded-lg transition text-coolgray-500 hover:text-coolgray-900 dark:text-gray-400 dark:hover:text-white bg-coolgray-100 hover:bg-coolgray-200 dark:bg-gray-800 dark:hover:bg-gray-700">Change</a>
    </div>
    <%= form_with(model: @user, local: true, class: "flex flex-col min-w-full") do |f| %>
        <%= f.label :name, class: "inline-block form-label mb-2" %>
        <%= f.text_field :name, class: 'form-input mb-6' %>
        <%= error_message_for(:name) %>

        <%= f.label :email, class: "inline-block form-label mb-2" %>
        <%= f.email_field :email, class: 'form-input mb-6' %>
        <%= error_message_for(:email) %>

        <%= f.label :password, "New password" , class: "inline-block form-label mb-2" %>
        <%= f.password_field :password, class: 'form-input mb-6' %>
        <%= error_message_for(:password) %>

        <%= f.label :password_confirmation, "Confirm password", class: "inline-block form-label mb-2" %>
        <%= f.password_field :password_confirmation, class: 'form-input mb-8' %>
        <%= error_message_for(:password_confirmation) %>

        <%= f.submit "Save changes", class: "form-button" %>
    <% end %>
</div>