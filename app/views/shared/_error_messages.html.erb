<% if @user.errors.any? %>
    <div id="error_explanation">
        <div class="">
            The form contains <%= pluralize(@user.errors.count, "error") %>.
        </div>
        <ul>
        <% @user.errors.messages.values.each do |msg| %>
            <% msg.each do  |m| %>
                <li><%= m %></li>
            <% end %>
        <% end %>
        </ul>
    </div>
<% end %>