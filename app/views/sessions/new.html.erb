<% provide(:title, 'Log in') %>

<div class="max-w-sm mx-auto flex flex-col items-center">
    <h1 class="mb-8 text-5xl font-bold tracking-tight leading-tight text-coolgray-900 dark:text-white">Log in</h1>
    <%= form_with(url: login_path, scope: :session, local: true, class: "flex flex-col min-w-full") do |f| %>

        <%= f.email_field :email, placeholder: "Email", class: 'form-input mb-4' %>

        <%= f.password_field :password, placeholder: "Password", class: 'form-input mb-4' %>
        
        <%= f.label :remember_me, class: "flex items-center mt-2 mb-6 cursor-pointer text-sm text-coolgray-700 dark:text-white" do %>
            <%= f.check_box :remember_me, class: "appearance-none outline-none h-4 w-4 transition focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 border-gray-300 rounded bg-coolgray-300 dark:bg-gray-700 bg-opacity-50 checked:bg-cyan-500" %>
            <span class="ml-2">Remember me</span>
        <% end %>

        <%= f.submit "Log in", class: "form-button" %>

        <p class="mt-6 text-center text-sm font-semibold transition text-coolgray-500 hover:text-cyan-600 dark:text-gray-400 dark:hover:text-white"><%= link_to "New user? Sign up now!", signup_path %></p>
    <% end %>
</div>